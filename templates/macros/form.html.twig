{% macro delete(path,crsf_id) %}
<form class="d-inline-block" method="post" action="{{ path }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ crsf_id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash-alt    "></i></button>
</form>
{% endmacro %}