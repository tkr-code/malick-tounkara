{% import "macros/breadcrumb.html.twig" as utils %}
{% import "macros/alertes.html.twig" as alerte %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}

{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
    {{ utils.breadcrumb('Create demo',[
        {
            path:path('demo_index'),
            name:'Manage demo'
        }
    ])}}
{% endblock %}

{% block title %}New Demo{% endblock %}
{% block body %}
{% for item in app.flashes('success') %}
  {{ alerte.alert(item,'success')}}
{% endfor %}
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h4>Create new Demo</h4>
            </div>
            <div class="card-body">
                {{ include('admin/demo/_form.html.twig') }}
            </div>
            <div class="card-footer">
                    {{ link.back(path('demo_index')) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
